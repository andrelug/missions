						a(href='shop-gridview-v1.html')
							p.category.primary Hero Images
						p.price
							span $
							| 12
					// /PRODUCT INFO
					hr.line-separator
					// USER RATING
					.user-rating
						a(href='author-profile.html')
							figure.user-avatar.small
								img(src='images/avatars/avatar_09.jpg', alt='user-avatar')
						a(href='author-profile.html')
							p.text-header.tiny Odin_Design
						ul.rating.tooltip(title="Author's Reputation")
