#product-sideshow-wrap
	#product-sideshow
		// PRODUCT SHOWCASE
		.product-showcase
			// HEADLINE
			.headline.primary
				h4 Latest Online Products
				// SLIDE CONTROLS
				.slide-control-wrap
					.slide-control.left
						// SVG ARROW
						svg.svg-arrow
							use(xlink:href='#svg-arrow')
						// /SVG ARROW
					.slide-control.right
						// SVG ARROW
						svg.svg-arrow
							use(xlink:href='#svg-arrow')
						// /SVG ARROW
				// /SLIDE CONTROLS
			// /HEADLINE
			// PRODUCT LIST
			#pl-1.product-list.grid.column4-wrap.owl-carousel
				// PRODUCT ITEM
				.product-item.column
					// PIN
					span.pin.featured Featured
					// /PIN
					// PRODUCT PREVIEW ACTIONS
					.product-preview-actions
						// PRODUCT PREVIEW IMAGE
						figure.product-preview-image
							img(src='images/items/flat_m.jpg', alt='product-image')
						// /PRODUCT PREVIEW IMAGE
						// PREVIEW ACTIONS
						.preview-actions
							// PREVIEW ACTION
							.preview-action
								a(href='item-v1.html')
