extends ../dashLayout

block content
	
	include ../partials/sideMenu
	
	// DASHBOARD BODY
	.dashboard-body
		include ../partials/header
		
		// DASHBOARD CONTENT
		.dashboard-content
			// HEADLINE
			.headline.filter.primary
				h4 Manage Items (02)
				form
					label.select-block(for='price_filter')
						select#price_filter(name='price_filter')
							option(value='0') Price (High to Low)
							option(value='1') Price (Low to High)
						// SVG ARROW
						svg.svg-arrow
							use(xlink:href='#svg-arrow')
						// /SVG ARROW
			// /HEADLINE
			// PRODUCT LIST
			.product-list.grid.column4-wrap
				// PRODUCT ITEM
				.product-item.upload-new.column
					// PRODUCT PREVIEW ACTIONS
					.product-preview-actions
						// PRODUCT PREVIEW IMAGE
						figure.product-preview-image
							img(src='images/dashboard/uploadnew-bg.jpg', alt='product-image')
						// /PRODUCT PREVIEW IMAGE
					// /PRODUCT PREVIEW ACTIONS
					// PRODUCT INFO
					.product-info
						p.text-header Upload New Item
						p.description
							| Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore.
					// /PRODUCT INFO
				// /PRODUCT ITEM
				// PRODUCT ITEM
				.product-item.column
					// PRODUCT PREVIEW ACTIONS
					.product-preview-actions
						// PRODUCT PREVIEW IMAGE
						figure.product-preview-image
							img(src='/images/items/westeros_m.jpg', alt='product-image')
						// /PRODUCT PREVIEW IMAGE
						// PRODUCT SETTINGS
						.product-settings.primary.dropdown-handle
							span.sl-icon.icon-settings
						// /PRODUCT SETTINGS
						// DROPDOWN
						ul.dropdown.small.hover-effect.closed
							li.dropdown-item
								// DP TRIANGLE
								.dp-triangle
								// DP TRIANGLE
								a(href='#') Edit Item
							li.dropdown-item
								a(href='#') Duplicate
							li.dropdown-item
								a(href='#') Share
							li.dropdown-item
								a(href='#') Delete
						// /DROPDOWN
					// /PRODUCT PREVIEW ACTIONS
					// PRODUCT INFO
					.product-info
						a(href='item-v1.html')
							p.text-header Westeros Custom Clothing
						p.product-description Lorem ipsum dolor sit urarde...
						a(href='shop-gridview-v1.html')
							p.category.primary PSD Templates
						p.price
							span $
							| 14
					// /PRODUCT INFO
					hr.line-separator
					// USER RATING
					.user-rating
						a(href='author-profile.html')
							figure.user-avatar.small
								img(src='/images/avatars/avatar_01.jpg', alt='user-avatar')
						a(href='author-profile.html')
							p.text-header.tiny Johnny Fisher
						ul.rating.tooltip(title="Author's Reputation")
							li.rating-item
